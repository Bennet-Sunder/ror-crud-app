<h1> Edit Articles </h1>
<%= form_with(model: @article, local: true) do |form| %>
<% if @article.errors.any? %>
    <div id="error">
        <h2><% pluralize(@article.errors.count, "error") %></h2>
    </div>
<% end %>

<p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to 'Back', articles_path %>
